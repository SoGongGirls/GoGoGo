<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <nl.dionsegijn.konfetti.KonfettiView
        android:id="@+id/viewKonfetti"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="5dp">


        <Button
            android:id="@+id/btnRotate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round1"
            android:layout_margin="10sp"
            android:padding="15sp"
            android:text="룰렛 돌리기"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:layout_gravity="center"
            android:background="@drawable/label"
            android:backgroundTint="@color/orange3"/>

        <RelativeLayout
            android:id="@+id/layoutRoulette"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:background="@drawable/background_roulette">

        </RelativeLayout>

        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:text="메뉴 추천 결과!"
            android:textColor="@color/orange4"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/locationButton"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25sp"
            android:padding="15sp"
            android:text="내 위치 확인하기"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/orange3"
            android:background="@drawable/round3" />

        <Button
            android:id="@+id/result2"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:padding="15sp"
            android:text="내 주변 매장 확인하기"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:fontFamily="@font/kopubworld_dotum_pro_medium"
            android:background="@drawable/round2" />

    </LinearLayout>

</FrameLayout>
