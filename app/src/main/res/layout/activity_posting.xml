<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".community.PostingActivity">
    <TextView
        android:id="@+id/title_posting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="@color/black"
        tools:text="타이틀"/>
    <TextView
        android:id="@+id/nickname_posting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="작성자"/>
    <TextView
        android:id="@+id/date_posting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="작성시간"/>
    <TextView
        android:id="@+id/contents_posting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        tools:text="본문입니다.^^"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/silver1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="댓글" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edt_comment"
                android:layout_width="250dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/submit_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="작성" />
        </LinearLayout>

        <ListView
            android:id="@+id/post_comment_list"
            android:layout_width="350dp"
            android:layout_height="wrap_content" />
    </LinearLayout>


</LinearLayout>