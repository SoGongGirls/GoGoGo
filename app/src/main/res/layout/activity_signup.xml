<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".login.SignupActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="10dp"
        android:text="ㄱ"
        android:textSize="120dp"
        android:textColor="@color/orange2"
        android:textAlignment="center"
        android:fontFamily="@font/onestore"/>

    <EditText
        android:id="@+id/input_email_signup"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="10dp"
        android:background="@drawable/round6"
        android:inputType="textEmailAddress"
        android:hint="이메일 주소 (아이디)" />

    <EditText
        android:id="@+id/input_nickname_signup"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="7dp"
        android:padding="10dp"
        android:maxLines="1"
        android:background="@drawable/round6"
        android:hint="닉네임" />

    <EditText
        android:id="@+id/input_pass_signup"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="7dp"
        android:padding="10dp"
        android:background="@drawable/round6"
        android:hint="비밀번호"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/input_pass_confirm"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="7dp"
        android:padding="10dp"
        android:background="@drawable/round6"
        android:hint="비밀번호 확인"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btn_signup"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:background="@drawable/round7"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="15dp"
        android:text="회원가입"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:textStyle="bold" />

</LinearLayout>